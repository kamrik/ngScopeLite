{
  "name": "HTML Scope",
  "description": "Scope as a web app",
  "manifest_version": 2,
  "version": "0.1.1",
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "<all_urls>",
    "storage"
  ]
}
